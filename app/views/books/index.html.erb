<body>

  <h1>Books</h1>

  <table>
    <thead>
  	  <tr>
  	  	<th>Title</th>
  	  	<th>Body</th>
  	  	<th colspan="3"></th>
  	  </tr>
  	</thead>

  	<tbody>
	  <% @books.each do |list| %>
	  	<tr>
          <td><span><%= list.title %></span></td>
          <td><span><%= list.body %></span></td>
          <td><%= link_to "Show", book_path(list.id) %></td>
          <td><%= link_to "Edit", edit_book_path(list.id) %></td>
          <td><%= link_to "Destroy", book_path(list.id), method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
  	  <% end %>
  	</tbody>
  </table>

  <h2>New Book</h2>

  <%= form_for(@book) do |f| %>

    <h3>Title</h3>
    <%= f.text_field :title %>

    <h3>Body</h3>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

  <% end %>
</body>