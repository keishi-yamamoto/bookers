<h1>編集画面</h1>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
<%= render 'layouts/error_messages', model: f.object %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<%= f.submit 'Update Book' %>
<% end %>

<!-- 編集部分 -->
<%= link_to "Show", book_path(@book) %>
<!-- 削除部分 -->
<%= link_to "Back", books_path %>